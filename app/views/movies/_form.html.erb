<%= form_for(movie) do |f| %>

  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :genre %>
    <%= f.text_field :genre, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :director %>
    <%= f.text_field :director, class: "form-control" %>
  </div>  <div class="form-group">
    <%= f.label :actor %>
    <%= f.text_field :actor, class: "form-control" %>
  </div>  
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, 'data-provider': :summernote %>
  </div>
  <div class="form-group">
    <%= f.label :image_path %>
    <%= f.file_field :image_path, class: "form-control" %>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
